/**calendar.wxss**/
.container {
  min-height: fit-content;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  background: #fff;
}

.calendar-header {
  background: #fff;
  width: 100%;
}

.header-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
}

.selector-group {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.year-selector,
.month-selector {
  font-size: 32rpx;
  color: #333;
  padding: 10rpx 20rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  min-width: 120rpx;
  text-align: center;
}

.arrow {
  padding: 10rpx;
  color: #666;
  font-size: 28rpx;
}

.today-btn {
  padding: 10rpx 30rpx;
  background: #07c160;
  color: #fff;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.weekdays {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  text-align: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
}

.weekday {
  color: #999;
  font-size: 28rpx;
}

.calendar-body {
  background: #fff;
  width: 100%;
}

.days-grid {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  border-left: 1rpx solid #eee;
  border-top: 1rpx solid #eee;
}

.day {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #333;
  position: relative;
  height: 100rpx;
  border-right: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
}

.day.other-month {
  color: #ccc;
}

.day.today {
  color: #07c160;
  font-weight: bold;
}

.day.today::after {
  content: '';
  position: absolute;
  bottom: 15%;
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background: #07c160;
}

.day.selected {
  background: #e6f3ff;
  color: #1890ff;
  font-weight: bold;
}

.selected-date {
  padding: 30rpx;
  text-align: center;
  color: #666;
  font-size: 28rpx;
  border-top: 1rpx solid #eee;
} 