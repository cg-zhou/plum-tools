/**calendar.wxss**/
.container {
  min-height: fit-content;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  background: #fff;
}

.calendar-header {
  background: #fff;
  width: 100%;
}

.header-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
}

.selector-group {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.year-selector,
.month-selector {
  font-size: 32rpx;
  color: #333;
  padding: 10rpx 20rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  min-width: 120rpx;
  text-align: center;
}

.arrow {
  padding: 10rpx;
  color: #666;
  font-size: 28rpx;
}

.today-btn {
  padding: 10rpx 30rpx;
  background: #07c160;
  color: #fff;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.weekdays {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  text-align: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
}

.weekday {
  color: #999;
  font-size: 28rpx;
}

.calendar-body {
  background: #fff;
  width: 100%;
}

.days-grid {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  border-left: 1rpx solid #ddd;
  border-top: 1rpx solid #ddd;
}

.day {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  font-size: 32rpx;
  color: #333;
  position: relative;
  height: 120rpx;
  border-right: 1rpx solid #ddd;
  border-bottom: 1rpx solid #ddd;
  box-sizing: border-box;
  padding: 10rpx 0;
}

/* 周末样式 */
.day:nth-child(7n),
.day:nth-child(7n+1) {
  background-color: #f0f0f0;
}

.day-number {
  font-size: 32rpx;
  line-height: 1;
  margin-bottom: 10rpx;
}

.festival-marks {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  width: 60%;
}

.festival-mark {
  height: 6rpx;
  border-radius: 3rpx;
}

/* 中国节日样式 */
.festival-mark.holiday.CN {
  background: rgba(245, 34, 45, 0.8);  /* 稍微淡化的红色 */
}

.festival-mark.workday.CN {
  background: rgba(140, 140, 140, 0.8);  /* 稍微淡化的灰色 */
}

/* 日本节日样式 */
.festival-mark.holiday.JP {
  background: rgba(24, 144, 255, 0.8);  /* 稍微淡化的蓝色 */
}

/* 选中日期的节日样式 */
.festival.holiday.CN {
  color: rgba(245, 34, 45, 0.9);
  background: rgba(245, 34, 45, 0.1);
}

/* 补班样式放在最后，确保不被其他样式覆盖 */
.festival.workday.CN {
  color: rgba(140, 140, 140, 0.9);
  background: rgba(140, 140, 140, 0.1);
}

.festival.holiday.JP {
  color: rgba(24, 144, 255, 0.9);
  background: rgba(24, 144, 255, 0.1);
}

.day.other-month {
  color: #ccc;
}

.day.today {
  color: #07c160;
  font-weight: bold;
}

.day.today::before {
  content: '';
  position: absolute;
  bottom: 20%;
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background: #07c160;
}

.day.selected {
  background: #e6fff0;  /* 浅绿色背景 */
  color: #07c160;  /* 绿色文字 */
  font-weight: bold;
}

.selected-info {
  padding: 20rpx;
  border-top: 1rpx solid #eee;
}

.selected-date {
  text-align: center;
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.selected-festivals {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  justify-content: center;
}

.festival {
  font-size: 28rpx;
  padding: 6rpx 16rpx;
  border-radius: 4rpx;
}

/* 法定假日标记 */
.day.has-festival::after {
  content: '';
  position: absolute;
  bottom: 15rpx;
  left: 20%;
  width: 60%;
  height: 8rpx;
  background: #ffe7e7;
  border-radius: 5rpx;
}

.region-tag {
  font-size: 24rpx;
  color: #666;
  text-align: center;
  margin-bottom: 10rpx;
  width: 100%;
} 