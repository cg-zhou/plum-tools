/**calendar.wxss**/
.container {
  min-height: fit-content;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  background: #fff;
  touch-action: pan-y;
  user-select: none;
}

.calendar-header {
  background: #fff;
  width: 100%;
}

.header-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
}

.selector-group {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.year-selector,
.month-selector {
  font-size: 32rpx;
  color: #333;
  padding: 10rpx 20rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  min-width: 120rpx;
  text-align: center;
}

.arrow {
  padding: 10rpx 12rpx;
  color: #666;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 20rpx;
  height: 40rpx;
  position: relative;
  cursor: pointer;
  -webkit-tap-highlight-color: transparent;  /* 禁用 WebKit 浏览器的点击高亮 */
  user-select: none;  /* 禁止文本选择 */
}

.arrow::before {
  content: '';
  display: block;
  width: 16rpx;
  height: 16rpx;
  border: 2rpx solid #666;
  border-width: 0 0 2rpx 2rpx;
  position: absolute;
}

.arrow.prev::before {
  transform: rotate(45deg);
}

.arrow.next::before {
  transform: rotate(225deg);
}

.today-btn {
  padding: 10rpx 30rpx;
  background: #07c160;
  color: #fff;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.weekdays {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  text-align: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
}

.weekday {
  color: #999;
  font-size: 28rpx;
}

.calendar-body {
  width: 100%;
  position: relative;
}

.days-grid {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  border-left: 1rpx solid #ddd;
  border-top: 1rpx solid #ddd;
}

.day {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  font-size: 32rpx;
  color: #333;
  position: relative;
  height: 120rpx;
  border-right: 1rpx solid #ddd;
  border-bottom: 1rpx solid #ddd;
  box-sizing: border-box;
  padding: 14rpx 0 0;
}

/* 周末样式 */
.day:nth-child(7n),
.day:nth-child(7n+1) {
  background-color: #f0f0f0;
}

.day-number {
  font-size: 32rpx;
  line-height: 1;
  margin-bottom: 10rpx;
}

.festival-marks {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  width: 80%;
}

.festival-mark {
  height: 12rpx;
  border-radius: 6rpx;
}

/* 中国节日样式 */
.festival-mark.holiday.CN {
  background: rgba(245, 34, 45, 0.75);
}

.festival-mark.workday.CN {
  background: rgba(140, 140, 140, 0.75);
}

/* 日本节日样式 */
.festival-mark.holiday.JP {
  background: rgba(24, 144, 255, 0.75);
}

/* 选中日期的节日样式 */
.festival.holiday.CN {
  color: rgba(245, 34, 45, 0.9);
  background: rgba(245, 34, 45, 0.1);
}

/* 补班样式放在最后，确保不被其他样式覆盖 */
.festival.workday.CN {
  color: rgba(140, 140, 140, 0.9);
  background: rgba(140, 140, 140, 0.1);
}

.festival.holiday.JP {
  color: rgba(24, 144, 255, 0.9);
  background: rgba(24, 144, 255, 0.1);
}

.day.other-month {
  color: #ccc;
}

.day.today {
  color: #07c160;
  font-weight: bold;
}

.day.today::before {
  content: '';
  position: absolute;
  bottom: 20%;
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background: #07c160;
}

.day.selected {
  background: #e6fff0;  /* 浅绿色背景 */
  color: #07c160;  /* 绿色文字 */
  font-weight: bold;
}

.selected-info {
  padding: 30rpx;
  border-top: 1rpx solid #eee;
  background: #f8f8f8;
  margin-top: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.selected-date {
  text-align: left;
  color: #333;
  font-size: 32rpx;
  margin-bottom: 24rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
}

.selected-date::before {
  content: '';
  display: inline-block;
  width: 8rpx;
  height: 40rpx;
  background: #07c160cc;
  margin-right: 16rpx;
  border-radius: 4rpx;
}

.selected-festivals {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  justify-content: flex-start;
  padding: 10rpx;
}

.festival {
  font-size: 26rpx;
  display: inline-flex;
  align-items: stretch;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 中国节日样式 */
.festival.holiday.CN {
  border: 1rpx solid rgba(245, 34, 45, 0.3);
}

.festival.holiday.CN::before {
  content: 'CN';
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 8rpx 12rpx;
  background: #f5222ddd;
  color: #fff;
  font-weight: 500;
}

.festival.holiday.CN::after {
  content: attr(data-name);
  display: flex;
  align-items: center;
  padding: 8rpx 16rpx;
  color: #f5222d;
}

/* 补班样式 */
.festival.workday.CN {
  border: 1rpx solid rgba(89, 89, 89, 0.3);
}

.festival.workday.CN::before {
  content: 'CN';
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 8rpx 12rpx;
  background: #595959dd;
  color: #fff;
  font-weight: 500;
}

.festival.workday.CN::after {
  content: attr(data-name);
  display: flex;
  align-items: center;
  padding: 8rpx 16rpx;
  background: rgba(89, 89, 89, 0.08);
  color: #595959;
}

/* 日本节日样式 */
.festival.holiday.JP {
  border: 1rpx solid rgba(24, 144, 255, 0.3);
}

.festival.holiday.JP::before {
  content: 'JP';
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 8rpx 12rpx;
  background: #1890ffdd;
  color: #fff;
  font-weight: 500;
}

.festival.holiday.JP::after {
  content: attr(data-name);
  display: flex;
  align-items: center;
  padding: 8rpx 16rpx;
  color: #1890ff;
}

.calendar-content {
  width: 100%;
  position: relative;
}

/* 新增样式 */
.right-group {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.settings-btn {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}

.settings-btn:active {
  opacity: 1;
}

.settings-panel {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
}

.panel-mask {
  position: absolute;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.3);
  backdrop-filter: blur(4rpx);
}

.panel-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx 30rpx;
  border-radius: 24rpx 24rpx 0 0;
  animation: panelSlideUp 0.3s ease;
  box-shadow: 0 -4rpx 20rpx rgba(0,0,0,0.08);
  border: 1rpx solid #eee;
}

@keyframes panelSlideUp {
  from { transform: translateY(100%); }
  to { transform: translateY(0); }
}

.filter-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 0;
  margin: 0 20rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

.country-flag {
  font-size: 34rpx;
  margin-right: 16rpx;
}

.filter-label {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

/* 调整开关尺寸 */
switch {
  transform: scale(0.8);
  transform-origin: right center;
  filter: brightness(0.9);
}

/* 新增整体风格统一 */
.panel-content {
  box-shadow: 0 -4rpx 20rpx rgba(0,0,0,0.08);
  border: 1rpx solid #eee;
  background: #f8f8f8;
}

.filter-item {
  border-bottom-color: #e0e0e0;
}

/* 新增地区标签样式 */
.region-tag {
  display: inline-flex;
  align-items: stretch;
  border-radius: 8rpx;
  overflow: hidden;
  border: 1rpx solid;
  margin-right: 20rpx;
}

.region-tag.CN {
  border-color: #f5222d4d;
}

.region-tag.JP {
  border-color: #1890ff4d;
}

.region-code {
  min-width: 40rpx;
  padding: 8rpx 12rpx;
  font-size: 24rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
}

.region-tag.CN .region-code {
  background: #f5222d;
  color: white;
}

.region-tag.JP .region-code {
  background: #1890ff;
  color: white;
}

.region-label {
  padding: 8rpx 16rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
}

.region-tag.CN .region-label {
  background: #fff0f0;
  color: #f5222d;
}

.region-tag.JP .region-label {
  background: #e6f4ff;
  color: #1890ff;
}
