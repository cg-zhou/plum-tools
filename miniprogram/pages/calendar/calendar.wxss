/**calendar.wxss**/
.container {
  min-height: fit-content;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  background: #fff;
}

.calendar-header {
  background: #fff;
  width: 100%;
}

.header-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
}

.selector-group {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.year-selector,
.month-selector {
  font-size: 32rpx;
  color: #333;
  padding: 10rpx 20rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  min-width: 120rpx;
  text-align: center;
}

.arrow {
  padding: 10rpx;
  color: #666;
  font-size: 28rpx;
}

.today-btn {
  padding: 10rpx 30rpx;
  background: #07c160;
  color: #fff;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.weekdays {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  text-align: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
}

.weekday {
  color: #999;
  font-size: 28rpx;
}

.calendar-body {
  background: #fff;
  width: 100%;
}

.days-grid {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  border-left: 1rpx solid #ddd;
  border-top: 1rpx solid #ddd;
}

.day {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #333;
  position: relative;
  height: 120rpx;
  border-right: 1rpx solid #ddd;
  border-bottom: 1rpx solid #ddd;
  box-sizing: border-box;
}

/* 周末样式 */
.day:nth-child(7n),
.day:nth-child(7n+1) {
  background-color: #f0f0f0;
}

.day-number {
  font-size: 32rpx;
  line-height: 1;
}

/* 法定假日标记 */
.day.has-festival::after {
  content: '';
  position: absolute;
  bottom: 15rpx;
  left: 20%;
  width: 60%;
  height: 8rpx;
  background: #ffe7e7;
  border-radius: 5rpx;
}

.day.other-month {
  color: #ccc;
}

.day.today {
  color: #07c160;
  font-weight: bold;
}

.day.today::before {
  content: '';
  position: absolute;
  bottom: 20%;
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background: #07c160;
}

.day.selected {
  background: #e6f3ff;
  color: #1890ff;
  font-weight: bold;
}

.selected-info {
  padding: 20rpx;
  border-top: 1rpx solid #eee;
}

.selected-date {
  text-align: center;
  color: #666;
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.selected-festivals {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  justify-content: center;
}

.festival {
  font-size: 28rpx;
  padding: 6rpx 16rpx;
  border-radius: 4rpx;
}

/* 统一使用红色风格显示放假信息 */
.festival.holiday {
  color: #f5222d;
  background: #fff1f0;
}

/* 统一使用橙色风格显示补班信息 */
.festival.workday {
  color: #fa8c16;
  background: #fff7e6;
}

/* 其他节日也使用红色风格 */
.festival.festival {
  color: #f5222d;
  background: #fff1f0;
} 