/**login.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  box-sizing: border-box;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.avatar-wrapper {
  padding: 0;
  width: 128rpx !important;
  height: 128rpx;
  border-radius: 50%;
  margin-bottom: 40rpx;
  background-color: #fff;
}

.avatar {
  display: block;
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
}

.nickname-input {
  width: 80%;
  border-bottom: 1rpx solid #ccc;
  padding: 20rpx;
  text-align: center;
  font-size: 32rpx;
  margin-bottom: 40rpx;
}

.login-btn {
  width: 80%;
  background: #07c160;
  color: #fff;
  border-radius: 10rpx;
  padding: 20rpx 0;
  font-size: 32rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}

.userinfo-nickname {
  color: #333;
  font-size: 32rpx;
} 