/**index.wxss**/
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  box-sizing: border-box;
  padding: 60rpx 30rpx;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.calendar-btn {
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #ffffff;
  padding: 30rpx 40rpx;
  border-radius: 20rpx;
  width: 90%;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.15);
  margin-bottom: 30rpx;
}

.btn-content {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
}

.calendar-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.text-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.calendar-text {
  color: #333;
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.calendar-desc {
  color: #666;
  font-size: 24rpx;
}
