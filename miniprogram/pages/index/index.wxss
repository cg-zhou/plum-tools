/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 80%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  margin-top: 20rpx;
  color: #333;
  font-size: 32rpx;
}

.usermotto {
  margin-top: 200px;
}

.login-btn {
  margin-top: 40rpx;
  width: 80%;
  background: #07c160;
  color: #fff;
  border-radius: 10rpx;
  padding: 20rpx 0;
  font-size: 32rpx;
}

.avatar-wrapper {
  padding: 0;
  width: 128rpx !important;
  height: 128rpx;
  border-radius: 50%;
  margin-top: 40rpx;
  background-color: #fff;
}

.avatar {
  display: block;
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
}

.nickname-input {
  margin-top: 40rpx;
  width: 80%;
  border-bottom: 1rpx solid #ccc;
  padding: 20rpx;
  text-align: center;
  font-size: 32rpx;
}
